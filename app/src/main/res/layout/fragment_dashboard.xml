<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E1F3D">

    <!-- Top Card with Water Corner -->
    <androidx.cardview.widget.CardView
        android:id="@+id/top_card"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B3E5FC">

            <!-- Water Corner Image -->
            <ImageView
                android:id="@+id/iv_water_corner"
                android:layout_width="230dp"
                android:layout_height="190dp"
                android:src="@drawable/watercorner"
                android:scaleType="fitEnd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Daily Goal Text -->
            <TextView
                android:id="@+id/tv_daily_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Litres"
                android:textColor="#1A237E"
                android:textSize="48sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_today_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D'aujourd'hui"
                android:textColor="#1A237E"
                android:textSize="16sp"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_daily_goal" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Page Indicators -->
    <LinearLayout
        android:id="@+id/page_indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <View
            android:layout_width="40dp"
            android:layout_height="8dp"
            android:background="@drawable/indicator_active"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/indicator_active" />
        
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/indicator_active" />
    </LinearLayout>

    <!-- Tab Buttons -->
    <HorizontalScrollView
        android:id="@+id/tab_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/page_indicators">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <Button
                android:id="@+id/btn_consumption"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Consommation"
                android:textSize="12sp"
                android:backgroundTint="#4DD0E1"
                android:textColor="#1A237E"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_graph"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Graphique de consommation"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:strokeColor="#4DD0E1"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_advice"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Conseils"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:strokeColor="#4DD0E1" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Main Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tab_scroll"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingBottom="80dp">

            <!-- Bottle Visualization -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_bottle"
                android:layout_width="0dp"
                android:layout_height="400dp"
                android:layout_marginEnd="8dp"



                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_stats"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0E1F3D"
                    >

                    <!-- Bottle Image -->
                    <ImageView
                        android:id="@+id/iv_bottle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bottle"
                        android:scaleType="fitCenter" />

                    <!-- Bottle Container for Water Level -->
                    <FrameLayout
                        android:id="@+id/bottle_container"
                        android:layout_width="120dp"
                        android:layout_height="280dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="40dp">

                        <!-- Water Level -->
                        <View
                            android:id="@+id/water_level"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="bottom"
                            android:background="#4DD0E1"
                            android:alpha="0.6" />

                    </FrameLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Stats Cards Column -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_stats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/card_bottle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.48">

                <!-- Consumption Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_consumption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#B3E5FC"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_drop"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_water_drop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tv_consumption_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4L 50%"
                            android:textColor="#1A237E"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/iv_drop"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remaining: 0.75L"
                            android:textColor="#1A237E"
                            android:textSize="12sp"
                            app:layout_constraintTop_toBottomOf="@id/tv_consumption_amount"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <!-- Circular Progress Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_circular_progress"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:layout_constraintTop_toBottomOf="@id/card_consumption">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/circular_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="60"
                            android:progressDrawable="@drawable/circular_progress"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/tv_circular_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textColor="#1A237E"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="@id/circular_progress"
                            app:layout_constraintBottom_toBottomOf="@id/circular_progress"
                            app:layout_constraintStart_toStartOf="@id/circular_progress"
                            app:layout_constraintEnd_toEndOf="@id/circular_progress" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Achievement Message -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_achievement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#263238"
                app:layout_constraintTop_toBottomOf="@id/card_bottle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L'objectif a été atteint !"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_goal"
                        android:drawablePadding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bon travail !\nTu as atteint 70 % de\nl'objectif d'aujourd'hui."
                        android:textColor="#B0BEC5"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Floating Action Button -->
    <ImageView
        android:id="@+id/fab_add_water"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/bottonflottonte"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
