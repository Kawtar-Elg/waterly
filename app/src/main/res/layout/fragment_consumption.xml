<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E1F3D">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="120dp">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chart"
            android:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graphique de la consommation d'eau :"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Filter Buttons -->
    <LinearLayout
        android:id="@+id/filter_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_button_rounded"
        android:backgroundTint="#2D8BBA"
        android:padding="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_weekly"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="Weekly"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_rounded"
            android:backgroundTint="#FFFFFF"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/btn_monthly"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="Monthly"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_rounded"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/btn_yearly"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="Yearly"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_rounded"
            android:backgroundTint="@android:color/transparent"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- Chart Container -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/filter_layout" />

    <!-- Monthly Stats Card -->
    <LinearLayout
        android:id="@+id/monthly_stats_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/line_chart">

        <TextView
            android:id="@+id/tv_stats_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Stats"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Goal Achievement Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goal"
                        android:textColor="#1A237E"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Achievement"
                        android:textColor="#1A237E"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_goal_achievement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18/30"
                        android:textColor="#1A237E"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="days"
                        android:textColor="#1A237E"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Circular Progress -->
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical">

                    <ProgressBar
                        android:id="@+id/progress_goal"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:progress="60"
                        android:max="100"
                        android:progressDrawable="@drawable/circular_progress"
                        android:background="@drawable/circular_progress" />

                    <TextView
                        android:id="@+id/tv_progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="18/30\ndays"
                        android:textColor="#1A237E"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:gravity="center" />

                </FrameLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Total Water Intake -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Water Intake"
                        android:textColor="#1A237E"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_total_intake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="54.2"
                        android:textColor="#1A237E"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="liters"
                        android:textColor="#1A237E"
                        android:textSize="12sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Average Per Day -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average Per Day"
                        android:textColor="#1A237E"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_average_per_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.8"
                        android:textColor="#1A237E"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L"
                            android:textColor="#1A237E"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7 days"
                            android:textColor="#4DD0E1"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <!-- This Month Bar Chart -->
    <androidx.cardview.widget.CardView
        android:id="@+id/monthly_chart_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#B3E5FC"
        app:layout_constraintTop_toBottomOf="@id/monthly_stats_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_chart_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Month"
                android:textColor="#1A237E"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Bottom Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Hydration Day: 16 Novembre 2025"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/monthly_chart_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>