<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingBottom="120dp">

        <!-- Bottle Visualization -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_bottle"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#0E1F3D"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/card_stats">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0E1F3D">

                <!-- Bottle Background Image -->
                <ImageView
                    android:id="@+id/iv_bottle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bottle"
                    android:scaleType="fitCenter" />

                <!-- Lottie Animation Bottle -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_bottle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    app:lottie_rawRes="@raw/animationbottle"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:layout_marginTop="130dp"/>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Stats Cards Column -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_stats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_bottle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.48">

            <!-- Consumption Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_consumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#B3E5FC"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_drop"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_water_drop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_consumption_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4L 50%"
                        android:textColor="#1A237E"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/iv_drop"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_daily_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remaining: 0.75L"
                        android:textColor="#1A237E"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/tv_consumption_amount"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Water Circle Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_circular_progress"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00000000"
                app:layout_constraintTop_toBottomOf="@id/card_consumption">

                <com.example.exam.ui.dashboard.WaterCircleView
                    android:id="@+id/water_circle_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Achievement Message -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_achievement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/card_bottle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_goal"
                        android:padding="8dp"
                        android:background="@drawable/bg_button_rounded"
                        android:backgroundTint="#4DD0E1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L'objectif a été atteint !"
                            android:textColor="#1A237E"
                            android:textSize="18sp"
                            android:fontFamily="@font/amita_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bon travail !"
                            android:textColor="#1565C0"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Floating Action Button -->
        <ImageView
            android:id="@+id/fab_add_water"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/addwater"
            android:contentDescription="Add Water"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/card_achievement"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>